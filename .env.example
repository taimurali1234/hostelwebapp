# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/hostel_db

# Server Configuration
PORT=5000
NODE_ENV=development
API_BASE_URL=http://localhost:5000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_EXPIRY=7d

# Stripe Configuration (Global Payment)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# EasyPaisa Configuration (Pakistan - Local Payment)
# Get from: https://easypaisa.com.pk/developers/
EASYPAISA_MERCHANT_ID=your_merchant_id
EASYPAISA_STORE_ID=your_store_id
EASYPAISA_API_KEY=your_api_key
EASYPAISA_API_URL=https://www.easypaisa.com.pk/api/payment

# JazzCash Configuration (Pakistan - Local Payment)
# Get from: https://www.jazzcash.com.pk/
JAZZCASH_MERCHANT_ID=your_merchant_id
JAZZCASH_PASSWORD=your_password_for_hashing
JAZZCASH_API_KEY=your_api_key
JAZZCASH_API_URL=https://sandbox.jazzcash.com.pk/gateway/payment
JAZZCASH_INTEGRATION_TYPE=ECOMMERCE

# AWS S3 Configuration (for room images)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET_NAME=your_bucket_name

# Email Configuration (for notifications)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Coupon Configuration
COUPON_CODES=WELCOME,HOLIDAYS,NEW2024
COUPON_DISCOUNT_PERCENT=10

# RabbitMQ Configuration (if using message queues)
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Payment Webhook Configuration
# These should be updated when you deploy to production
STRIPE_WEBHOOK_URL=http://localhost:5000/api/payments/webhook/stripe
EASYPAISA_CALLBACK_URL=http://localhost:5000/api/payments/easypaisa/callback
JAZZCASH_CALLBACK_URL=http://localhost:5000/api/payments/jazzcash/callback
