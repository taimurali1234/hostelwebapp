generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model User { 
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password      String
  phone         String
  address       String?
  role          Role           @default(USER)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  isVerified    Boolean        @default(false)
  aiActions     AiAction[]
  bookings      Booking[]
  notifications Notification[]
  reviews       Review[]
}

model Room {
  id          String      @id @default(uuid())
  title       String
  type        RoomType
  floor       String
  beds        Int
  washrooms   Int
  description String
  price       Int?
  stayType    BookingType  @default(LONG_TERM)
  status      RoomStatus  @default(AVAILABLE)
  bookedSeats Int @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  bookings    Booking[]
  reviews     Review[]
  images      RoomImage[]
  videos      RoomVideo[]

}
model RoomVideo{
  id     String @id @default(uuid())
  url    String
  roomId String
  createdAt   DateTime    @default(now())
  room   Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)

}
model SeatPricing {
  id        String   @id @default(uuid())
  roomType  RoomType
  stayType  BookingType  @default(LONG_TERM)
  price     Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model RoomImage {
  id     String @id @default(uuid())
  url    String
  roomId String
  createdAt   DateTime    @default(now())
  room   Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)
}

model Booking {
  id          String        @id @default(uuid())
  userId      String
  roomId      String

  baseAmount    Int
  taxAmount     Int?
  discount      Int?
  couponCode   String?

  bookingType   BookingType @default(SHORT_TERM)
  seatsSelected Int  

  status        BookingStatus @default(PENDING)
  source        BookingSource @default(WEBSITE)

  checkIn     DateTime
  checkOut    DateTime?
  totalAmount Int
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  cancelledAt   DateTime?
  room        Room          @relation(fields: [roomId], references: [id])
  user        User          @relation(fields: [userId], references: [id])
  payment     Payment?
}
model TaxConfig {
  id        String   @id @default(uuid())
  percent   Int      @default(16)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Payment {
  id            String        @id @default(uuid())
  bookingId     String        @unique
  paymentMethod PaymentMethod
  paymentStatus PaymentStatus
  transactionId String
  createdAt     DateTime      @default(now())
  booking       Booking       @relation(fields: [bookingId], references: [id])
}



model Notification {
  id          String   @id @default(uuid())

  // Who should receive it
  audience    NotificationAudience

  // Optional: specific user (only when audience = USER)
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])

  // Content
  title       String?
  message     String
  severity    NotificationSeverity @default(INFO)

  // State
  isRead      Boolean  @default(false)

  // Metadata
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Review {
  id        String   @id @default(uuid())
  userId    String
  roomId    String
  rating    Int
  status    reviewStatus  @default(PENDING)
  comment   String?
  createdAt DateTime @default(now())
  room      Room     @relation(fields: [roomId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model AiAction {
  id        String   @id @default(uuid())
  userId    String
  action    String
  payload   Json
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
enum NotificationAudience {
  USER        // single user
  ADMIN       // admins only
  ALL_USERS   // broadcast
}

enum NotificationSeverity {
  INFO
  WARNING
  CRITICAL
}
enum reviewStatus{
  APPROVED
  PENDING
}

enum Role {
  USER
  COORDINATOR
  ADMIN
}

enum RoomType {
  SINGLE
  DOUBLE_SHARING
  TRIPLE_SHARING
  QUAD_SHARING
  QUINT_SHARING
  VIP_SUIT

}


enum BookingType {
  SHORT_TERM
  LONG_TERM
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum BookingSource {
  WEBSITE
  ADMIN
  MOBILE
}

enum PaymentMethod {
  STRIPE
  PAYPAL
  EASYPAISA
}

enum PaymentStatus {
  SUCCESS
  FAILED
  PENDING
}
enum RoomStatus{
  AVAILABLE
  BOOKED
}
